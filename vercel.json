{
  "buildCommand": "npm run build",
  "outputDirectory": "dist",
  "rewrites": [
    { "source": "/api/(.*)", "destination": "/api/$1" },
    { "source": "/(.*)", "destination": "/index.html" }
  ],
  "functions": {
    "api/drawing.js": { "memory": 1024, "maxDuration": 10 },
    "api/pusher-trigger.js": { "memory": 512, "maxDuration": 10 }
  }
}
